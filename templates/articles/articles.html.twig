{% block body %}
    <section class="listArticles">
        <div class="container">
        <h1>{{ categories.nom}}</h1>
        <p>{{ categories.description}}</p>
            <div class="row ">
            {% for articles in articles %}

                <div class="itemarticle  col-md-6 col-lg-4 ">
                    {% include 'composants/cartearticle.html.twig' with {'articles': articles} %}
                </div>

            {% endfor %}
            </div>
            <div class="d-flex justify-content-center">
                {% do articles.setPageRange(2) %}
                {{ knp_pagination_render(articles, 'base/pagination.html.twig')}}
            </div>
        </div>
    </section>
{% endblock %}

