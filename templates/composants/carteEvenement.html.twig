<div class="carteEvenement card col-10" style="max-width: 1330px;">
  <div class="contentEvenement col-12 row g-0">
    <!-- Image à gauche avec 4 colonnes -->
    <div class="imgContent col-12 col-md-4 ">
      <img src="{{evenements.image}}" class="img-fluid rounded-start" alt="..." loading="lazy" >
    </div>

    <!-- Contenu à droite avec 8 colonnes -->
    <div class="col-12 col-md-8 row">

      <!-- Colonne pour le nom, description et date -->
      <div class="card-body col-8">
          <h5 class="card-title">{{ evenements.nom }}</h5>
          <p class="card-text">{{ evenements.description|u.truncate(200, '...', false) }}</p>
          <div class="col-12 row">
              <p class="col-6 card-text">{{ evenements.rdv|date('d/m/y') }}</small></p>
              <p class="col-6">{{ evenements.prix }} €</p>
          </div>
      </div>

          <!-- Colonne pour l'adresse et le bouton -->
          
      <div class="card-body col-4 d-flex flex-column justify-content-between">
        <h5 class="card-title col-12">{{evenements.adresse}}</h5>
        <div class="d-flex justify-content-end mt-auto">
          <a class="button-primary">Je participe</a>
        </div>
      </div>
        
    </div>
  </div>
</div>