<section class="formContact ">
    <div class="container justify-content-center py-3">
        <h2 class="text-center" data-aos="fade-right">Contacte nous!</h2>
        <div class="container row justify-content-evenly ">
            <section class="ContainerformContact col-lg-5 gy-5 px-5">
                {{ form_start(formContact, {'attr': {'class': 'row'}}) }}

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {% if formContact.vars.errors is not empty %}
                <div class="alert alert-danger">
                    {{ form_errors(formContact) }}
                </div>
                {% endif %}

                <div class="col-md-6 mt-3">
                    {{ form_label(formContact.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(formContact.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Doe'}}) }}
                    {{ form_errors(formContact.nom) }}
                </div>

                <div class="col-md-6 mt-3">
                    {{ form_label(formContact.prenom, 'Pr√©nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(formContact.prenom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'John'}}) }}
                    {{ form_errors(formContact.prenom) }}
                </div>

                <div class="mt-3">
                    {{ form_label(formContact.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(formContact.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'name@example.com'}}) }}
                    {{ form_errors(formContact.email) }}
                </div>

                <div class="mt-3">
                    {{ form_label(formContact.objet, 'Objet', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(formContact.objet, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Objet'}}) }}
                    {{ form_errors(formContact.objet) }}
                </div>

                <div class="mt-3">
                    {{ form_label(formContact.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(formContact.message, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Message', 'rows': 8}}) }}
                    {{ form_errors(formContact.message) }}
                </div>

                <div class="d-flex justify-content-end mt-5">
                    {{ form_row(formContact.envoyer, {'attr': {'class': 'btn button-primary'}}) }}
                </div>

                {{ form_end(formContact) }}
            </section>
